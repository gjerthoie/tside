datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  password      String
  name          String?
  dateOfBirth   DateTime?
  profileImage  String    @default("https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Default-Profile-Picture-Download-PNG-Image-qhTcpfOZJCXYoTtxxKQ8AB6oTh1L7r.png")
  workouts      Workout[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Workout {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  date        DateTime
  exercises   Exercise[]
  userId      String     @db.ObjectId
  user        User       @relation(fields: [userId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Exercise {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  sets      Set[]
  workoutId String   @db.ObjectId
  workout   Workout  @relation(fields: [workoutId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Set {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  reps       Int
  weight     Float
  exerciseId String   @db.ObjectId
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

